<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_game"
    tools:ignore="MissingConstraints, LabelFor">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.4"
        android:background="@drawable/button_background"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            style="@style/Text.Title"
            android:id="@+id/title_name_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/title_name_world"/>

        <EditText
            style="@style/Text.Medium.Roboto"
            android:id="@+id/text_name_world"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/message_name_world"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:autofillHints="name"
            android:background="@drawable/button_background"
            android:padding="8dp"
            android:layout_margin="12dp"/>

        <Button
            style="@style/Text.Medium.Roboto"
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:text="@string/message_agree"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>