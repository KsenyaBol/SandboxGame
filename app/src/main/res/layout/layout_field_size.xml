<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_game"
    tools:ignore="MissingConstraints, HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                style="@style/Text.Title"
                android:id="@+id/title_select_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_select_field"
                android:paddingTop="20dp"
                android:gravity="center"/>

            <Button
                style="@style/Text.Big"
                android:id="@+id/button_size_big"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="50 x 50"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/focus_state"
                android:layout_marginTop="20dp"/>

            <Button
                style="@style/Text.Big"
                android:id="@+id/button_size_normal"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="20 x 20"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/focus_state"
                android:layout_marginTop="10dp" />

            <Button
                style="@style/Text.Big"
                android:id="@+id/button_size_small"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="10 x 10"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/focus_state"
                android:layout_marginVertical="10dp" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>